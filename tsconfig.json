{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
//    "noUnusedLocals": true,
//    "noImplicitThis": true,
//    "noUnusedParameters": true,
//    "noImplicitReturns": true,
//    "strictNullChecks": true,
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": false,
    "skipLibCheck": false,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "lib": [
    "es6",
    "dom",
    "dom.iterable",
    "scripthost",
    "es7",
    "es2017"
  ]
}
